@article{Shattell2010,
abstract = {PURPOSE: This study examined the quality of peer review in three scholarly nursing journals from the perspectives of authors and editors. Specifically, the study examined the extent to which manuscript reviews provided constructive guidance for authors to further develop their work for publication, and for editors to make informed and sound decisions on the disposition of manuscripts.

